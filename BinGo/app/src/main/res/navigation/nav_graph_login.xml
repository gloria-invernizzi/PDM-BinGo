<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_login"
    app:startDestination="@id/loginFragment">

    <!-- Login Fragment -->
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.application.bingo.ui.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_mainActivity2"
            app:destination="@id/mainActivity" />
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_recoverPasswordFragment"
            app:destination="@id/recoverPasswordFragment"/>
    </fragment>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.application.bingo.ui.MainActivity"
        android:label="Home"
        tools:layout="@layout/activity_main" />

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.application.bingo.ui.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/recoverPasswordFragment"
        android:name="com.application.bingo.ui.RecoverPasswordFragment"
        android:label="Recupera Password"
        tools:layout="@layout/fragment_recover_password" />

</navigation>