<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <!-- Home Fragment -->
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.application.bingo.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <action
            android:id="@+id/action_homeFragment_to_scanFragment"
            app:destination="@id/scanFragment" />
        <action
            android:id="@+id/action_homeFragment_to_calendarFragment"
            app:destination="@id/calendarFragment" />
        <action
            android:id="@+id/action_homeFragment_to_whereToThrowFragment"
            app:destination="@id/whereToThrowFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favoriteFragment"
            app:destination="@id/favoriteFragment" />
        <action
            android:id="@+id/action_homeFragment_to_familyFragment"
            app:destination="@id/familyFragment" />
    </fragment>

    <!-- Scan Fragment -->
    <fragment
        android:id="@+id/scanFragment"
        android:name="com.application.bingo.ui.home.scan.ScanFragment"
        android:label="Scan"
        tools:layout="@layout/fragment_scan">
        <action
            android:id="@+id/action_scanFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>

    <!-- Calendar Fragment -->
    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.application.bingo.ui.home.CalendarFragment"
        android:label="Calendar"
        tools:layout="@layout/fragment_calendar"/>

    <!-- Result Fragment -->
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.application.bingo.ui.home.scan.ResultFragment"
        android:label="Result"
        tools:layout="@layout/fragment_result"/>

    <!-- Profile Fragment -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.application.bingo.ui.home.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">

        <!-- Azione verso SettingsFragment -->
        <action
            android:id="@+id/action_profileFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.application.bingo.ui.home.profile.SettingsFragment"
        android:label="@string/settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_changePasswordFragment"
            app:destination="@id/changePasswordFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_changeEmailFragment"
            app:destination="@id/changeEmailFragment" />
        <action
        android:id="@+id/action_settingsFragment_to_WelcomeFragment"
        app:destination="@id/welcomeFragment"
        app:popUpTo="@id/settingsFragment"
        app:popUpToInclusive="true" />
    </fragment>
    <!-- ChangeEmail Fragment -->
    <fragment
        android:id="@+id/changeEmailFragment"
        android:name="com.application.bingo.ui.home.profile.ChangeEmailFragment"
        android:label="@string/change_email"
        tools:layout="@layout/fragment_change_email" />

    <!-- WhereToThrow Fragment -->
    <fragment
        android:id="@+id/whereToThrowFragment"
        android:name="com.application.bingo.ui.home.WhereToThrowFragment"
        android:label="@string/where_to_throw"
        tools:layout="@layout/fragment_where_to_throw"/>

    <!-- ChangePassword Fragment -->
    <fragment
        android:id="@+id/changePasswordFragment"
        android:name="com.application.bingo.ui.home.profile.ChangePasswordFragment"
        android:label="@string/change_password"
        tools:layout="@layout/fragment_change_password"/>

    <!-- Favorite Fragment -->
    <fragment
        android:id="@+id/favoriteFragment"
        android:name="com.application.bingo.ui.home.favorites.FavoriteFragment"
        android:label="@string/favorite"
        tools:layout="@layout/fragment_favorite">

        <action
            android:id="@+id/action_favoriteFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>

    <!-- Family Fragment -->
    <fragment
        android:id="@+id/familyFragment"
        android:name="com.application.bingo.ui.home.family.FamilyFragment"
        android:label="Family"
        tools:layout="@layout/fragment_family" />

</navigation>
